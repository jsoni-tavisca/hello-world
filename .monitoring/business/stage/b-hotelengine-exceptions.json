{
  "description": "Hotel engine exceptions",
  "friendlyName": "Hotel engine exceptions",
  "threshold": {
    "condition": "greaterThanEquals",
    "value": 10
  },
  "applicationName": "test application",
  "environment": "stage",
  "queryConfiguration": {
    "query": "app_name:hotel_engine AND type:exception AND !tid:hhqgxrptds",
    "index": "logs-*",
    "aggregate": {
      "type": "count",
      "field": "*"
    }
  },
  "notifications": {
    "onError": [
      {
        "type": "teams_message",
        "template": "business_fault_failure"
      }
    ],
    "onRecovery": [
      {
        "type": "teams_message",
        "template": "business_fault_recovery"
      }
    ]
  }
}