{
  "friendlyName": "Exceptions",
  "threshold": {
    "condition": "gte",
    "value": 1
  },
  "applicationName": "Car Engine",
  "environment": "stage",
  "queryConfiguration": {
    "query": "app_name:car_engine AND type:exception AND tid:hc8mbjncw0",
    "index": "logs-*",
    "windowInSeconds": 300,
    "aggregate": {
      "type": "count",
      "field": "*",
      "percentile": 0
    }
  },
  "notifications": {
    "onError": [
      {
        "type": "teams_message",
        "template": "business_fault_failure"
      }
    ],
    "onRecovery": [
      {
        "type": "teams_message",
        "template": "business_fault_recovery"
      }
    ]
  }
}